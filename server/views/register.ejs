<%- include('components/header.ejs') %>
<body>
    <nav>
        <h1 id="title">Kukkik Ano</h1>
        <div>
            <button class="registerButtons" id="loginBtn">Logg inn</button>
        </div>
    </nav>
    <main>
        <div class="form-container">
            <h2>Registrer ny bruker</h2>
            <form id="registerForm">
                <div class="form-group">
                    <label for="navn">Navn</label>
                    <input type="text" id="navn" name="navn" required />
                </div>
                <div class="form-group">
                    <label for="epost">E-post</label>
                    <input type="email" id="epost" name="epost" required />
                </div>
                <div class="form-group">
                    <label for="telefon">Telefon</label>
                    <input type="tel" id="telefon" name="telefon" placeholder="f.eks. +47 123 45 678" required />
                    <small>Støtter norske, svenske, finske og russiske numre</small>
                </div>
                <div class="form-group">
                    <label for="passord">Passord</label>
                    <input type="password" id="passord" name="passord" minlength="8" required />
                    <small>Minst 8 tegn</small>
                </div>
                <div class="form-group">
                    <label for="kontaktspråk">Kontaktspråk</label>
                    <select id="kontaktspråk" name="kontaktspråk" required>
                        <option value="" disabled selected>Velg språk</option>
                        <option value="Sør">Sør</option>
                        <option value="Ume">Ume</option>
                        <option value="Pite">Pite</option>
                        <option value="Lule">Lule</option>
                        <option value="Nord">Nord</option>
                        <option value="Enare">Enare</option>
                        <option value="Skolt">Skolt</option>
                        <option value="Akkala">Akkala</option>
                        <option value="Kildin">Kildin</option>
                        <option value="Ter">Ter</option>
                    </select>
                </div>
                <div class="form-message" id="registerMessage"></div>
                <button type="submit" class="submitBtn">Registrer</button>
            </form>
            <p class="form-footer">Har du allerede en konto? <a href="/login">Logg inn her</a></p>
        </div>
    </main>
</body>
<%- include('components/footer.ejs') %>
