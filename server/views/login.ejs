<%- include('components/header.ejs') %>
<body>
    <nav>
        <h1 id="title">Reinsdyr Broker</h1>
        <div>
            <button class="registerButtons" id="registerBtn">Registrer</button>
        </div>
    </nav>
    <main>
        <div class="form-container">
            <h2>Logg inn</h2>
            <form id="loginForm">
                <div class="form-group">
                    <label for="epost">E-post</label>
                    <input type="email" id="epost" name="epost" required />
                </div>
                <div class="form-group">
                    <label for="passord">Passord</label>
                    <input type="password" id="passord" name="passord" required />
                </div>
                <div class="form-message" id="loginMessage"></div>
                <button type="submit" class="submitBtn">Logg inn</button>
            </form>
            <p class="form-footer">Har du ikke en konto? <a href="/register">Registrer deg her</a></p>
        </div>
    </main>
</body>
